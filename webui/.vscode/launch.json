{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceRoot}/src",
        "userDataDir": "${workspaceRoot}/.vscode/chrome",
        "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
        }
      },
      {
        "name": "Launch Server (AZDS)",
        "type": "node",
        "request": "launch",
        "protocol": "inspector",
        "preLaunchTask": "azds: prelaunch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "azds",
        "runtimeArgs": [
          "exec",
          "--on-exit-resume-up",
          "--",
          "node",
          "--inspect=0.0.0.0:9229",
          "--inspect-brk",
          "--nolazy",
          "server.js"
        ],
        "address": "127.0.0.1",
        "port": 52810,
        "localRoot": "${workspaceFolder}/.",
        "remoteRoot": "/app"
      }
    ]
}
