{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "automationAccountName": {
        "type": "string",
        "defaultValue": "crsl-automationAccount",
        "metadata": {
          "description": "Azure Automation Account"
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for the Automation Account"
        }
      },
      "artifactsLocation": {
        "type": "string",
        "metadata": {
          "description": "Location for the runbook Script"
        }
      },
      "ApplicationId": {
        "type": "string",
        "defaultValue": "d8beeda6-8896-4c7b-b504-7e27ee734768",
        "metadata": {
          "description": "Azure AD application Id that Automation account will use to authenticate with Azure"
        }
      },
      "SubscriptionId": {
        "type": "string",
        "defaultValue": "c36fb2f8-f98d-40d0-90a9-d65e93acb428",
        "metadata": {
          "description": "Azure Subscription Id Automation account will use to authenticate with Azure"
        }
      },
      "CertThumbprint": {
        "type": "string",
        "defaultValue": "D03EDA463EC6A2B2F0C87F2F72347D38B9AAB9AD",
        "metadata": {
          "description": "Certificate Thumbprint that Automation account will use to authenticate with Azure"
        }
      }
    },
    "variables": {
      "CreateIoThubscriptUri": "[concat(parameters('artifactsLocation'),'/CreateIoThubRunbook.ps1')]",
      "DeleteIoThubscriptUri": "[concat(parameters('artifactsLocation'),'/DeleteIoThubRunbook.ps1')]"
    },
    "resources": [
      {
        "name": "[parameters('automationAccountName')]",
        "type": "Microsoft.Automation/automationAccounts",
        "apiVersion": "2015-10-31",
        "location": "[parameters('location')]",
        "tags": {
          "[concat('hidden-related:', resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName')))]": "Resource",
          "displayName": "automationaccount"
        },
        "properties": {
          "sku": { "name": "Basic" }
        },
        "resources": [
          //{
          //  "name": "AzureServicePrincipal",
          //  "type": "connectionTypes",
          //  "apiVersion": "2015-10-31",
          //  "dependsOn": [
          //    "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
          //  ],
          //  "properties": {
          //    "isGlobal": false,
          //    "fieldDefinitions": {
          //      "ApplicationId": { "type": "System.String" },
          //      "TenantId": { "type": "System.String" },
          //      "CertificateThumbprint": { "type": "System.String" },
          //      "SubscriptionId": { "type": "System.String" }
          //    }
          //  }
          //},
          {
            "name": "AzureRunAsConnection",
            "type": "connections",
            "apiVersion": "2015-10-31",
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
              "description": "service principal that was automatically created for this automation account.",
              "connectionType": {
                "name": "AzureServicePrincipal"
              },
              "fieldDefinitionValues": {
                "ApplicationId": "[parameters('ApplicationId')]",
                "TenantId": "facac3c4-e2a5-4257-af76-205c8a821ddb",
                "CertificateThumbprint": "[parameters('CertThumbprint')]",
                "SubscriptionId": "[parameters('SubscriptionId')]"
              }
            }
          },
          {
            "type": "runbooks",
            "apiVersion": "2015-10-31",
            "name": "CreateIoTHubTenant",
            "location": "[parameters('location')]",
            //"tags": {
            //  "[concat('hidden-related:', resourceId('Microsoft.Automation/automationAccounts/runbooks'),'CreateIoTHubTenant'))]": "Resource",
            //  "displayName": "runbooks"
            //},
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
              "description": "Creates a new IoT Hub for a new tenant and writes to table storage when the deployment is completed.",
              "runbookType": "PowerShell",
              "logVerbose": false,
              "logProgress": false,
              "publishContentLink": {
                "uri": "[variables('CreateIoThubscriptUri')]",
                "version": "1.0.0"
              }
              // "parameters": {
              //     "WebhookData": {
              //       "type": "System.Object",
              //       "isMandatory": false,
              //       "position": 0,
              //       "defaultValue": null
              //     }
              // }
            }
          },
          {
            "type": "runbooks",
            "apiVersion": "2015-10-31",
            "name": "DeleteIoTHubTenant",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "properties": {
              "runbookType": "PowerShell",
              "logVerbose": false,
              "logProgress": false,
              "publishContentLink": {
                "uri": "[variables('CreateIoThubscriptUri')]",
                "version": "1.0.0"
              }
            }
          }
           //{
           //    "type": "webhooks",
           //    "apiVersion": "2015-10-31",
           //    "name": "CreateIotHub",
           //    "dependsOn": [
           //       "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
           //   //    "[resourceId('Microsoft.Automation/automationAccounts/runbooks', parameters('automationAccountName'), 'CreateIoTHubTenant')]"
           //    ],
           //    "properties": {
           //        "isEnabled": true,
           //        "expiryTime": "2020-07-18T18:54:49.31+00:00",
           //        "runbook": {
           //            "name": "CreateIoTHubTenant"
           //        }
           //    }
           //}
        ]
      }
     ]
  }