{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "applicationCode": {
        "minLength": 3,
        "type": "string"
      },
      "deployEnvironment": {
        "minLength": 2,
        "type": "string"
      },
      "KeyVaultReader-User1-ObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the User"
        }
      },
      "KeyVaultReader-Application1-ObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the Application"
        }
      }
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "keyVaultName": "[concat(parameters('applicationCode'),'vlt',parameters('deployEnvironment'))]"
    },
    "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "name": "[variables('keyVaultName')]",
        "apiVersion": "2016-10-01",
        "location": "[variables('location')]",
        "tags": {},
        "properties": {
          "sku": {
            "family": "A",
            "name": "Standard"
          },
          "tenantId": "[subscription().tenantId]",
          "accessPolicies": [
            {
              "condition": "[not(empty(parameters('KeyVaultReader-User1-ObjId')))]",
              "objectId": "[parameters('KeyVaultReader-User1-ObjId')]",
              "tenantId": "facac3c4-e2a5-4257-af76-205c8a821ddb",
              "permissions": {
                "keys": [],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": [
                  "Get",
                  "List",
                  "Update",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore",
                  "Create"
                ]
              }
            },
            {
              "condition": "[not(empty(parameters('KeyVaultReader-Application1-ObjId')))]",
              "objectId": "[parameters('KeyVaultReader-Application1-ObjId')]",
              "tenantId": "facac3c4-e2a5-4257-af76-205c8a821ddb",
              "permissions": {
                "keys": [
                  "Get",
                  "List"
                ],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": [
                  "Get",
                  "List",
                  "Update",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore",
                  "Create",
                  "Import"
                ]
              }
            }
          ]
        }
      }
    ],
    "outputs": {
      "CloudResourceName": {
        "value": "[variables('keyVaultName')]",
        "type": "string"
      },
      "CloudResourceUri": {
        "value": "",
        "type": "string"
      },
      "CloudResourceType": {
        "value": "Key vault",
        "type": "string"
      }
    }
  }